<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_base_height="140"
            sl:scale_base_width="400">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_logo"
                sl:scale_left="150"
                sl:scale_top="20" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_base_height="30"
            sl:scale_base_width="400">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="대전사람"
                android:textStyle="bold"
                sl:scale_left="150"
                sl:scale_textsize="25" />

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_base_height="30"
            sl:scale_base_width="400">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="대전광역시 정보 알림 서비스"
                android:textStyle="bold"
                sl:scale_textsize="17.5"
                sl:scale_top="5"
                sl:scale_width="400"
                sl:scale_height="20"
                android:gravity="center_horizontal"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_base_height="90"
            sl:scale_base_width="400"
            android:paddingTop="20dp">

            <ImageView
                android:background="@drawable/round_corner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                sl:scale_width="370"
                sl:scale_height="60"
                sl:scale_left="15"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                sl:scale_width="370"
                sl:scale_height="60"
                android:text="아이디를 입력하세요"
                android:textStyle="bold"
                sl:scale_textsize="18"
                android:textColor="@color/Gray"
                sl:scale_left="15"
                android:gravity="center"/>

            <EditText
                android:id="@+id/inputId"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textStyle="bold"
                sl:scale_left="15"
                sl:scale_textsize="17.5"
                sl:scale_width="370"
                sl:scale_height="60"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_base_height="90"
            sl:scale_base_width="400"
            android:paddingTop="10dp">

            <ImageView
                android:background="@drawable/round_corner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                sl:scale_width="370"
                sl:scale_height="60"
                sl:scale_left="15"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                sl:scale_width="370"
                sl:scale_height="60"
                android:text="비밀번호를 입력하세요"
                android:textStyle="bold"
                sl:scale_textsize="18"
                android:textColor="@color/Gray"
                sl:scale_left="15"
                android:gravity="center"/>

            <EditText
                android:id="@+id/inputPw"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textStyle="bold"
                sl:scale_left="15"
                sl:scale_textsize="17.5"
                sl:scale_width="370"
                sl:scale_height="60"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_base_height="60"
            sl:scale_base_width="400">

            <Button
                android:id="@+id/okBtn"
                android:background="@drawable/round_corner_middle"
                android:text="확인"
                sl:scale_textsize="20"
                android:layout_width="0dp"
                android:layout_height="0dp"
                sl:scale_width="370"
                sl:scale_height="60"
                sl:scale_left="15"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="70"
                    sl:scale_base_width="400">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="계정이 없으면 등록해주세요."
                        sl:scale_textsize="26"
                        sl:scale_width="400"
                        sl:scale_height="70"
                        android:gravity="center_vertical|right"/>

                </com.ssomai.android.scalablelayout.ScalableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="140"
                    sl:scale_base_width="400">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="회원가입"
                        android:textStyle="bold"
                        sl:scale_textsize="50"
                        sl:scale_width="400"
                        sl:scale_height="140"
                        android:gravity="center_vertical"
                        sl:scale_left="20"/>

                </com.ssomai.android.scalablelayout.ScalableLayout>

            </LinearLayout>
        </LinearLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_base_height="70"
            sl:scale_base_width="400">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                sl:scale_width="200"
                sl:scale_height="140"/>


        </com.ssomai.android.scalablelayout.ScalableLayout>


    </LinearLayout>

</LinearLayout>